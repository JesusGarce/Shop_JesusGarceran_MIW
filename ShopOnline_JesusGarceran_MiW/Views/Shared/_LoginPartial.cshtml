@using Microsoft.AspNet.Identity

@section heads{}

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href=@Url.Action("Create", "Profile")><i class="fas fa-user"></i> Profile </a></li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fas fa-sign-out-alt"></i>Log out</a></li>
        <li><a href="@Url.Action("Show", "Cart")"><i class="fas fa-shopping-cart"></i> Cart </a></li>
        <li><a href="@Url.Action("Index", "Orders")"><i class="fas fa-file-invoice"></i> My orders </a></li>
    </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li><a href="@Url.Action("Register", "Account")"><i class="fas fa-sign-in-alt"></i> Register </a></li>
    <li><a href="@Url.Action("Login", "Account")"><i class="fas fa-lock"></i> Login </a></li>
    <li><a  href="@Url.Action("Show", "Cart")"><i class="fas fa-shopping-cart"></i> Cart </a></li>
</ul>
}

@section scripts{}